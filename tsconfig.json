{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": false,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types",
            "index.d.ts"
        ]
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}